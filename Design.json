{
  "name": "PlantersSocialTheme",
  "theme": {
    "colors": {
      "primary": "#4CAF50",
      "primaryDark": "#2E7D32",
      "primaryLight": "#A5D6A7",
      "secondary": "#E8F5E9",
      "background": "#F9FAF8",
      "card": "#FFFFFF",
      "text": "#1B1B1B",
      "textMuted": "#6B7280",
      "border": "#D1D5DB",
      "accent": "#81C784",
      "error": "#EF4444",
      "success": "#22C55E"
    },
    "fonts": {
      "body": "Inter, sans-serif",
      "heading": "Poppins, sans-serif",
      "mono": "Fira Code, monospace"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "spacing": {
      "none": "0px",
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "40px"
    },
    "radii": {
      "none": "0px",
      "sm": "4px",
      "md": "8px",
      "lg": "16px",
      "xl": "24px",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px rgba(0, 0, 0, 0.15)"
    },
    "components": {
      "button": {
        "base": {
          "fontWeight": "600",
          "borderRadius": "lg",
          "padding": "md lg"
        },
        "variants": {
          "primary": {
            "backgroundColor": "primary",
            "color": "white",
            "hover": {
              "backgroundColor": "primaryDark"
            }
          },
          "secondary": {
            "backgroundColor": "secondary",
            "color": "primary",
            "hover": {
              "backgroundColor": "primaryLight"
            }
          }
        }
      },
      "card": {
        "base": {
          "backgroundColor": "card",
          "borderRadius": "lg",
          "padding": "lg",
          "boxShadow": "md"
        }
      },
      "input": {
        "base": {
          "borderColor": "border",
          "borderRadius": "md",
          "padding": "sm md",
          "focus": {
            "borderColor": "primary"
          }
        }
      }
    }
  }
}
